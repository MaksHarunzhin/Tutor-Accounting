<Window x:Class="Tutor_Accounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tutor_Accounting"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:Tutor_Accounting.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1920"
        Height="1080"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#acacac"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                BorderThickness="0"
                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e5e5e5" />
                                <Setter Property="Foreground" Value="Red"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowStateButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
        BorderThickness="0"
        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e5e5e5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Row="0"
              Grid.ColumnSpan="3">
                <Border Width="50"
                    Height="50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="20,0,0,0"
                    CornerRadius="50"
                    x:Name="ButtonBorder">
                    <behaviors:Interaction.Triggers>
                        <behaviors:EventTrigger EventName="MouseLeftButtonDown" SourceObject="{Binding ElementName=ButtonBorder}">
                            <behaviors:InvokeCommandAction Command="{Binding ShowSidePanelCommand}" CommandParameter="{Binding ElementName=SidePanel}"/>
                        </behaviors:EventTrigger>
                    </behaviors:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#f0f0f0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Rectangle Width="20"
                               Height="3"
                               Fill="Gray"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Margin="0,18,0,0"/>
                        <Rectangle Width="20"
                               Height="3"
                               Fill="Gray"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Margin="0,24,0,0"/>
                        <Rectangle Width="20"
                               Height="3"
                               Fill="Gray"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Margin="0,30,0,0"/>
                    </Grid>
                </Border>
                <TextBlock Text="Tutor Accounting"
                       FontSize="25"
                       Width="200"
                       Height="35"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="130,0,0,0"/>
                <TextBlock Text="by Maks Kharunzhin"
                       Width="90"
                       Height="15"
                       FontSize="10"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="230,55,0,0"/>
            </Grid>

            <Grid Grid.Row="0"
      Grid.Column="1">
                <Border Height="30"
            Background="Black"
            VerticalAlignment="Top"
            CornerRadius="0,0,20,20">

                </Border>
            </Grid>

            <Grid Grid.Row="0"
                  Grid.Column="2">
                <Button Style="{StaticResource CloseButtonStyle}"
                        Width="80" Height="30"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Content="✖"
                        FontSize="15"/>
                <Button Style="{StaticResource WindowStateButtonStyle}"
                        Width="80" Height="30"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="0,0,80,0">
                    <fa:FontAwesome Icon="Regular_WindowMaximize"
                                    FontSize="18"
                                    Width="80" Height="30"
                                    TextAlignment="Center"
                                    Padding="0,6,0,0">
                        <fa:FontAwesome.Style>
                            <Style TargetType="fa:FontAwesome">
                                <Setter Property="Foreground" Value="#acacac"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#9d9d9d"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </fa:FontAwesome.Style>
                    </fa:FontAwesome>
                </Button>
            </Grid>

            <Grid Grid.Row="1"
              Grid.Column="0"
              x:Name="SidePanel"
              HorizontalAlignment="Left"
              Width="{Binding SidePanelWidth[0]}">
                <Border Grid.Column="0"
                Grid.Row="1"
                        CornerRadius="0,20,20,0"
                BorderBrush="Red"
                BorderThickness="2"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
